<h4>Create New Application(Client)</h4>
<%= form_for(@client) do |f| %>
  <div class="row fcenter">
    <div class="form-group">
       <div>
        <%= f.label :login_url, 'Login Url', class: 'control-label' %>
      </div>
      <div class="col-lg-12">
        <%= f.text_field :login_url, value: @client.login_url, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
       <div>
        <%= f.label :name_app, 'App Name', class: 'control-label' %>
      </div>
      <div class="col-lg-12">
        <%= f.text_field :name_app, value: @client.name_app, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <div>
        <%= f.label :auth_type, 'Type', class: 'control-label' %>
      </div>
      <div class="col-lg-12">
        <%= f.select :auth_type, options_for_select(['SSO', 'PASS']), {}, { class: 'form-control' } %>
      </div>
    </div>
    <div class="form-group">
       <div>
        <%= f.label :secret_key, 'Secret Key', class: 'control-label' %>
      </div>
      <div class="col-lg-12">
        <%= f.text_field :secret_key, value: @client.secret_key, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
       <div>
        <%= f.label :public_key, 'Public Key', class: 'control-label' %>
      </div>
      <div class="col-lg-12">
        <%= f.text_field :public_key, value: @client.public_key, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-lg-12">
        <%= f.submit 'Save', class: 'form-control' %>
      </div>
    </div>
  </div>
<% end %>