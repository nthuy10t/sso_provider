<div id="wrapper">
  <div class="main-content">
    <div class="l-part">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= f.text_field :email, placeholder: "Username", class: "input-1" %>
        <div class="overlap-text">
          <%= f.password_field :password, placeholder: "Password", class: "input-2" %>
          <a href="#">Forgot?</a>
        </div>
        <% if devise_mapping.rememberable? -%>
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        <% end -%>
        <%= f.button "Log in", class:"btn" %>
      <% end %>
    </div>
  </div>
  <div class="sub-content">
    <%= render "users/shared/links" %>
  </div>
</div>